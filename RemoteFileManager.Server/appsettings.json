{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=FileManager;User=sa;Password=123;Trusted_Connection=True;TrustServerCertificate=true"
  },
  "FileStorage": {
    "RootPath": "C:\\FileManagerStorage",
    "MaxFileSize": 524288000,
    "ChunkSize": 65536
  },
  "Authentication": {
    "TokenExpirationMinutes": 60,
    "SecretKey": "YourSuperSecretKeyHere_MustBe32CharactersLong!!"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000",
        "Protocols": "Http2"
      }
    }
  },
  "Jwt": {
    "Key": "SuperSecretKey_MustBeVeryLong_AtLeast32Bytes_ForSecurity!!",
    "Issuer": "RemoteFileManager",
    "Audience": "RemoteFileManagerUser",
    "ExpirationMinutes": 10080
  }
}