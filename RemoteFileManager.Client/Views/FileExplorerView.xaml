<UserControl x:Class="RemoteFileManager.Client.Views.FileExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:model="clr-namespace:RemoteFileManager.Shared.Models.FileSystem;assembly=RemoteFileManager.Shared">

    <materialDesign:DialogHost Identifier="RootDialog" DialogTheme="Inherit">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Thanh Toolbar -->
                <RowDefinition Height="*"/>
                <!-- Danh sách file -->
            </Grid.RowDefinitions>

            <!-- 1. TOOLBAR (Thanh điều hướng) -->
            <materialDesign:Card Grid.Row="0" Margin="10" Padding="10" UniformCornerRadius="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Cột 0: Back -->
                        <ColumnDefinition Width="*"/>
                        <!-- Cột 1: Path -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Cột 2: New Folder -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Cột 3: Upload (MỚI) -->
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Cột 4: Refresh -->
                    </Grid.ColumnDefinitions>

                    <!-- Cột 0: Nút Back -->
                    <Button Grid.Column="0" Command="{Binding GoBackCommand}" 
                            Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="Go Back">
                        <materialDesign:PackIcon Kind="ArrowUpBold" />
                    </Button>

                    <!-- Cột 1: Thanh địa chỉ -->
                    <TextBox Grid.Column="1" Text="{Binding CurrentPath}" 
                             Margin="10,0" IsReadOnly="True"
                             VerticalAlignment="Center" 
                             materialDesign:HintAssist.Hint="Computer Drives"/>

                    <!-- Cột 2: Nút New Folder -->
                    <Button Grid.Column="2" Command="{Binding CreateFolderCommand}" 
                            Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="New Folder" Margin="5,0">
                        <materialDesign:PackIcon Kind="FolderPlus" />
                    </Button>

                    <!-- Cột 3: Nút Upload (THÊM MỚI VÀO ĐÂY) -->
                    <Button Grid.Column="3" Command="{Binding UploadFileCommand}" 
                            Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="Upload File" Margin="5,0">
                        <materialDesign:PackIcon Kind="FileUpload" />
                    </Button>

                    <!-- Cột 4: Nút Refresh (Đẩy sang cột 4) -->
                    <Button Grid.Column="4" Command="{Binding RefreshCommand}" 
                            Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="Refresh" Margin="5,0,0,0">
                        <materialDesign:PackIcon Kind="Refresh" />
                    </Button>
                    <Button Grid.Column="5" Command="{Binding SendClipboardCommand}" 
        Style="{StaticResource MaterialDesignIconButton}" 
        ToolTip="Gửi Clipboard cho Server" Margin="5,0,0,0">
                        <materialDesign:PackIcon Kind="ContentCopy" />
                    </Button>

                    <!-- Lấy Clipboard -->
                    <Button Grid.Column="6" Command="{Binding GetClipboardCommand}" 
        Style="{StaticResource MaterialDesignIconButton}" 
        ToolTip="Lấy Clipboard từ Server" Margin="5,0,0,0">
                        <materialDesign:PackIcon Kind="ContentPaste" />
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- 2. MAIN CONTENT (Giữ nguyên không đổi) -->
            <Grid Grid.Row="1" Margin="10,0,10,10">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Panel.ZIndex="1"
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             Width="50" Height="50"/>

                <ListBox ItemsSource="{Binding Items}" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         HorizontalContentAlignment="Stretch">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <EventSetter Event="MouseDoubleClick" Handler="ListBoxItem_MouseDoubleClick"/>
                            <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="Download File" 
                                                  Icon="{materialDesign:PackIcon Kind=Download}"
                                                  Command="{Binding PlacementTarget.Tag.DownloadItemCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                  CommandParameter="{Binding}"
                                                  Foreground="Green"/>
                                        <Separator/>
                                        <MenuItem Header="Edit File (Text)" 
                                                  Icon="{materialDesign:PackIcon Kind=FileDocumentEdit}"
                                                  Command="{Binding PlacementTarget.Tag.EditFileCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                  CommandParameter="{Binding}"
                                                  Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>                             

                                        <Separator/>
                                        <MenuItem Header="Delete Item" 
                                                  Icon="{materialDesign:PackIcon Kind=Delete}"
                                                  Command="{Binding PlacementTarget.Tag.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                  CommandParameter="{Binding}"
                                                  Foreground="Red"/>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.Resources>
                        <!-- Template DriveDto (Giữ nguyên) -->
                        <DataTemplate DataType="{x:Type model:DriveDto}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="Harddisk" Width="35" Height="35" 
                                                         Foreground="{DynamicResource MaterialDesign.Brush.Primary}" 
                                                         VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock>
                                        <Run Text="{Binding Label}"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding AvailableFreeSpace, StringFormat={}{0:N0} bytes free}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>

                        <!-- Template FileDto (Giữ nguyên) -->
                        <DataTemplate DataType="{x:Type model:FileDto}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Width="30" Height="30" VerticalAlignment="Center" Name="FileIcon" Kind="FileOutline"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                    <TextBlock Text="{Binding Name}" FontSize="14"/>
                                    <TextBlock Text="{Binding DateModified}" FontSize="11" Opacity="0.6"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="{Binding Size, StringFormat={}{0:N0} KB}" 
                                           VerticalAlignment="Center" Opacity="0.6" Name="FileSizeText"/>
                            </Grid>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsFolder}" Value="True">
                                    <Setter TargetName="FileIcon" Property="Kind" Value="Folder"/>
                                    <Setter TargetName="FileIcon" Property="Foreground" Value="#FBC02D"/>
                                    <Setter TargetName="FileSizeText" Property="Text" Value=""/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.Resources>
                </ListBox>
            </Grid>

            <!-- 3. STATUS BAR (Giữ nguyên) -->
            <materialDesign:Card Grid.Row="1" VerticalAlignment="Bottom" Margin="20" UniformCornerRadius="8"
                                 Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid Margin="15,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logic hiển thị text: Nếu đang upload thì hiện Uploading, ngược lại Downloading -->
                    <!-- Để đơn giản tạm thời cứ để Processing... hoặc Downloading... -->
                    <TextBlock Text="Processing File..." VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>

                    <ProgressBar Grid.Column="1" Value="{Binding DownloadProgress}" Maximum="100" Height="10"/>
                    <TextBlock Grid.Column="2" Text="{Binding DownloadProgress, StringFormat={}{0:0}%}" 
                               Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</UserControl>