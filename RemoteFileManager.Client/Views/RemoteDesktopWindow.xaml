<Window x:Class="RemoteFileManager.Client.Views.RemoteDesktopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remote Desktop Viewer" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        Focusable="True"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">

    <Grid>
        <!-- ScrollViewer cho phép cuộn nếu màn hình bên kia quá to -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- HÌNH ẢNH MÀN HÌNH -->
                <!-- RenderOptions.BitmapScalingMode="NearestNeighbor" giúp ảnh sắc nét hơn khi zoom -->
                <Image x:Name="ScreenDisplay" 
                       Stretch="None"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       Focusable="True" 
                       MouseMove="ScreenDisplay_MouseMove"
                       MouseDown="ScreenDisplay_MouseDown"
                       MouseUp="ScreenDisplay_MouseUp"/>

                <!-- (Optional) Bạn có thể thêm 1 Image con trỏ chuột bay lơ lửng ở đây sau này -->
            </Grid>
        </ScrollViewer>

        <!-- Loading Text khi chưa kết nối -->
        <TextBlock x:Name="StatusText" Text="Connecting..." 
                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="20" FontWeight="Bold"/>
    </Grid>
</Window>