<UserControl x:Class="RemoteFileManager.Client.Views.TextEditorDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="900" Height="600">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Editor Body -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <materialDesign:PackIcon Kind="FileDocumentEdit" Width="28" Height="28" 
                                     Foreground="{DynamicResource MaterialDesign.Brush.Primary}" 
                                     VerticalAlignment="Center"/>
            <TextBlock x:Name="FileNameText" Text="Editing: config.json" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                       Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Editor TextBox -->
        <TextBox Grid.Row="1" 
                 x:Name="EditorTextBox"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 VerticalAlignment="Stretch"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas" 
                 FontSize="14"
                 Margin="0,0,0,15"
                 TextWrapping="NoWrap"
                 materialDesign:HintAssist.Hint="Nội dung file..."/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <!-- Nút Hủy -->
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    IsCancel="True" Margin="0,0,10,0"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                HỦY BỎ
            </Button>

            <!-- Nút Lưu: Trả về text mới -->
            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    IsDefault="True"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="{Binding Text, ElementName=EditorTextBox}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,8,0"/>
                    <TextBlock Text="LƯU THAY ĐỔI"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>