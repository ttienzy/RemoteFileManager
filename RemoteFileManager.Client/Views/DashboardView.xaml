<UserControl x:Class="RemoteFileManager.Client.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:views="clr-namespace:RemoteFileManager.Client.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <!-- DialogHost cho toàn bộ Dashboard -->
    <materialDesign:DialogHost Identifier="RootDialog" DialogTheme="Inherit">

        <Grid Background="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <!-- Sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- Content -->
            </Grid.ColumnDefinitions>

            <!-- ============================================= -->
            <!-- CỘT 1: SIDEBAR (DANH SÁCH MÁY) -->
            <!-- ============================================= -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,5,0" Padding="0" UniformCornerRadius="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header / Buttons -->
                        <RowDefinition Height="*"/>
                        <!-- List -->
                    </Grid.RowDefinitions>

                    <!-- HEADER & BUTTONS -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="Remote File Manager" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   FontWeight="Bold" Margin="5,0,0,15" 
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                        <!-- 1. NÚT SCAN & ADD -->
                        <Button Command="{Binding ScanAndAddCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="40" Margin="0,0,0,10"
                                ToolTip="Tự động quét mạng LAN và kết nối">
                            <StackPanel Orientation="Horizontal">
                                <!-- Spinner Loading -->
                                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                             Value="0" IsIndeterminate="True" 
                                             Width="20" Height="20"
                                             Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                <!-- Icon Plus (Ẩn khi đang scan) -->
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Width="20" Height="20">
                                    <materialDesign:PackIcon.Style>
                                        <Style TargetType="materialDesign:PackIcon" BasedOn="{StaticResource {x:Type materialDesign:PackIcon}}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </materialDesign:PackIcon.Style>
                                </materialDesign:PackIcon>

                                <!-- Text -->
                                <TextBlock Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="SCAN &amp; ADD SERVER"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                                    <Setter Property="Text" Value="SCANNING..."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>

                        <!-- 2. NÚT GỬI FILE HÀNG LOẠT -->
                        <Button Command="{Binding BroadcastUploadCommand}" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="40"
                                ToolTip="Gửi file vào ổ D:\RemoteShare cho các máy đã chọn">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CloudUpload" VerticalAlignment="Center"/>
                                <TextBlock Text="GỬI FILE HÀNG LOẠT" Margin="8,0,0,0" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,15,0,5"/>
                        <TextBlock Text="Danh sách máy" FontSize="12" Foreground="Gray" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- DANH SÁCH MÁY -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding Sessions}" 
                             SelectedItem="{Binding SelectedSession}"
                             SelectionMode="Single"
                             Padding="0"
                             HorizontalContentAlignment="Stretch"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <!-- Item Máy tính -->
                                <Border Padding="10" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Background="Transparent">

                                    <!-- ✅ FIX CHÍNH: Gán Tag = DashboardViewModel -->
                                    <Border.Tag>
                                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="DataContext"/>
                                    </Border.Tag>

                                    <!-- ============================================ -->
                                    <!-- MENU CHUỘT PHẢI: KÍCH HOẠT REMOTE DESKTOP -->
                                    <!-- ============================================ -->
                                    <Border.ContextMenu>
                                        <ContextMenu>
                                            <!-- ✅ FIX: Binding Command đúng qua Tag -->
                                            <MenuItem Header="Remote Desktop" 
                                                      Command="{Binding PlacementTarget.Tag.RemoteDesktopCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                      CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon Kind="RemoteDesktop"/>
                                                </MenuItem.Icon>
                                            </MenuItem>

                                            <Separator/>

                                            <MenuItem Header="Disconnect" 
                                                      Foreground="Red">
                                                <MenuItem.Icon>
                                                    <materialDesign:PackIcon Kind="CloseNetwork"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Border.ContextMenu>

                                    <!-- Nội dung hiển thị dòng -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Checkbox -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Icon -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Info -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Status -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Checkbox chọn máy (cho gửi hàng loạt) -->
                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" 
                                                  Margin="0,0,10,0" VerticalAlignment="Center"/>

                                        <!-- Icon Máy tính -->
                                        <materialDesign:Card Grid.Column="1" Width="40" Height="40" 
                                                             Background="#F5F5F5" UniformCornerRadius="20">
                                            <materialDesign:PackIcon Kind="Monitor" Width="20" Height="20" 
                                                                     VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                                     Foreground="#555"/>
                                        </materialDesign:Card>

                                        <!-- Thông tin Tên & IP -->
                                        <StackPanel Grid.Column="2" Margin="12,0,5,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding IpAddress}" FontSize="12" Opacity="0.6"/>
                                        </StackPanel>

                                        <!-- Đèn trạng thái Online -->
                                        <Ellipse Grid.Column="3" Width="10" Height="10" 
                                                 Fill="#4CAF50" VerticalAlignment="Center"
                                                 Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>

            <!-- ============================================= -->
            <!-- CỘT 2: CONTENT (FILE EXPLORER) -->
            <!-- ============================================= -->
            <Grid Grid.Column="1" Margin="10">
                <materialDesign:Card UniformCornerRadius="5" materialDesign:ElevationAssist.Elevation="Dp4">
                    <!-- DataContext của View này lấy từ FileExplorerVM của Dashboard -->
                    <views:FileExplorerView DataContext="{Binding FileExplorerVM}"/>
                </materialDesign:Card>
            </Grid>

        </Grid>
    </materialDesign:DialogHost>
</UserControl>